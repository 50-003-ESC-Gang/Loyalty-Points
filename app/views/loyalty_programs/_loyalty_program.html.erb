<div id="<%= dom_id loyalty_program %>" class="col-4 p-3">
  <div class="card bg-dark text-light m-1 border border-light">
    <div class="card-body">
      <h5 class="card-title"><%= loyalty_program.program_name %></h5>

      <p>
        <strong>Loyalty program:</strong>
        <%= loyalty_program.loyalty_program_id %>
      </p>

      <p>
        <strong>Program name:</strong>
        <%= loyalty_program.program_name %>
      </p>

      <p>
        <strong>Currency name:</strong>
        <%= loyalty_program.currency_name %>
      </p>

      <p>
        <strong>Processing time:</strong>
        <%= loyalty_program.processing_time %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= loyalty_program.description %>
      </p>

      <p>
        <a href="https://<%=loyalty_program.enrollment_link%>" target="_blank" class="btn btn-sm btn-primary">Enrollment Link</a>
        <a href="https://<%=loyalty_program.terms_and_conditions_link%>" target="_blank" class="btn btn-sm btn-primary">Terms and Conditions</a>
      </p>

      <a href="<%= loyalty_program_path(loyalty_program) %>" class="btn btn-light">Link Account</a>
    </div>
  </div>
</div>
