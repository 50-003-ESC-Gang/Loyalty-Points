<div id="<%= dom_id @loyalty_program %>" class="p-0">
  <div class="container bg-dark text-light m-1">
    <div class="card-body">
      <h5 class="card-title"><%= @loyalty_program.program_name %></h5>

      <p>
        <strong>Loyalty program:</strong>
        <%= @loyalty_program.loyalty_program_id %>
      </p>

      <p>
        <strong>Program name:</strong>
        <%= @loyalty_program.program_name %>
      </p>

      <p>
        <strong>Currency name:</strong>
        <%= @loyalty_program.currency_name %>
      </p>

      <p>
        <strong>Processing time:</strong>
        <%= @loyalty_program.processing_time %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @loyalty_program.description %>
      </p>

      <p>
        <strong>Membership ID Regex:</strong>
        <%= @loyalty_program.membership_regex %>
      </p>

      <p>
        <a href="https://<%=@loyalty_program.enrollment_link%>" target="_blank" class="btn btn-sm btn-info">Enrollment Link</a>
        <a href="https://<%=@loyalty_program.terms_and_conditions_link%>" target="_blank" class="btn btn-sm btn-info">Terms and Conditions</a>
      </p>

    </div>
  </div>
</div>

<div class="ps-4 pb-3">
  <h5 class="text-light">Link Membership ID</h5>

  <%= form_with(url: loyalty_program_link_path(@loyalty_program)) do |form| %>
    <div class="row w-25 ps-3">
    <%= form.text_field :membership_id, class: "input-group-text" %>
    <%= button_to "Submit Membership ID", @loyalty_program, method: :link, class: "btn btn-warning"%>
    </div>
  <% end %>
</div>

<div class="d-flex flex-row justify-content-left pt-2">
  
  <%#= button_to "Edit this loyalty program", edit_loyalty_program_path(@loyalty_program), class: "btn btn-info p-1 m-1" %>
  <%#= button_to "Destroy this loyalty program", @loyalty_program, method: :delete, class: "btn btn-danger p-1 m-1" %>
  
  <%= button_to "Back to loyalty programs", loyalty_programs_path, class: "btn btn-primary p-1 m-1" %>

</div>
<% if current_user.admin %>
<div class="bg-dark text-light m-1"> 
  <h5 class="card-title">Update Conversion rate</h5>

  <%= form_with(url: loyalty_program_update_conversion_rate_path(@loyalty_program)) do |form| %>
    <%= form.text_field :conversion_rate %>
    <%= button_to "Change", @loyalty_program, method: :update_conversion_rate %>
  <% end %>
</div>
<% end %>